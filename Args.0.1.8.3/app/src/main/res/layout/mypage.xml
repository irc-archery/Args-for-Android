<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/BasicInformation"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seat">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#009688"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="@dimen/text_size_medium"
                        android:layout_height="match_parent"
                        android:id="@+id/titleimage"
                        android:src="@drawable/user"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="5dp"
                        android:text="ユーザー情報"
                        android:id="@+id/titletext" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold"
                            android:text="氏名"
                            android:id="@+id/textView2"
                            android:layout_marginBottom="3dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_medium"
                            android:text=""
                            android:paddingLeft="5dp"
                            android:id="@+id/textView3"
                            android:layout_marginBottom="3dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold"
                            android:text="Eメール"
                            android:id="@+id/textView4"
                            android:layout_marginBottom="3dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_medium"
                            android:text=""
                            android:paddingLeft="5dp"
                            android:id="@+id/textView5"
                            android:layout_marginBottom="3dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold"
                            android:text="生年月日"
                            android:id="@+id/textView20"
                            android:layout_marginBottom="3dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_medium"
                            android:text=""
                            android:paddingLeft="5dp"
                            android:id="@+id/textView21"
                            android:layout_marginBottom="3dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold"
                            android:text="性別"
                            android:id="@+id/textView22"
                            android:layout_marginBottom="3dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_medium"
                            android:text=""
                            android:paddingLeft="5dp"
                            android:id="@+id/textView23"
                            android:layout_marginBottom="3dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold"
                            android:text="所属団体"
                            android:id="@+id/textView6"
                            android:layout_marginBottom="3dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_medium"
                            android:text=""
                            android:paddingLeft="5dp"
                            android:id="@+id/textView7"
                            android:layout_marginBottom="3dp" />
                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       android:textSize="@dimen/text_size_medium"
                        android:text=" 団体作成 "
                        android:layout_gravity="right"
                        android:id="@+id/button1"
                        android:textColor="#ffffff"
                        android:background="@drawable/shadow"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/CreateGame"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seat" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#009688"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="@dimen/text_size_medium"
                        android:layout_height="match_parent"
                        android:id="@+id/titleimage2"
                        android:src="@drawable/dot"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="5dp"
                        android:text="試合を始める"
                        android:id="@+id/titletext2" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:id="@+id/imageView1"
                            android:src="@drawable/mlist"
                            android:scaleType="fitCenter"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           android:textSize="@dimen/text_size_medium"
                            android:text="試合一覧"
                            android:textStyle="bold"
                            android:id="@+id/textView10" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_medium"
                            android:text="参加する試合を選びます。"
                            android:id="@+id/text1" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                           android:textSize="@dimen/text_size_medium"
                            android:text=" 試合一覧 "
                            android:layout_gravity="right"
                            android:id="@+id/button3"
                            android:textColor="#ffffff"
                            android:background="@drawable/shadow"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:id="@+id/imageView2"
                            android:src="@drawable/mgears"
                            android:scaleType="fitCenter"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           android:textSize="@dimen/text_size_medium"
                            android:text="試合作成"
                            android:textStyle="bold"
                            android:id="@+id/textView9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_medium"
                            android:text="新しく試合を作成します。"
                            android:id="@+id/text2" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_medium"
                            android:text=" 試合作成 "
                            android:layout_gravity="right"
                            android:id="@+id/button2"
                            android:textColor="#ffffff"
                            android:background="@drawable/shadow" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/PastPerformance"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seat">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#009688"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="@dimen/text_size_medium"
                            android:layout_height="match_parent"
                            android:id="@+id/titleimage3"
                            android:src="@drawable/line"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="5dp"
                            android:text="過去の成績"
                            android:id="@+id/titletext3" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <LinearLayout
                        android:id="@+id/PastPerformance5"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           android:textSize="@dimen/text_size_medium"
                            android:text="過去の成績(最新5件)"
                            android:textStyle="bold"
                            android:id="@+id/textView12" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="1dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/frame">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/frame">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dp"
                                    android:textSize="@dimen/text_size_medium"
                                    android:text="日付 試合"
                                    android:id="@+id/old_score1" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dp"
                                    android:textSize="@dimen/text_size_medium"
                                    android:text="sum/avg"
                                    android:id="@+id/old_score6" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/frame">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dp"
                                    android:textSize="@dimen/text_size_medium"
                                    android:text="日付 試合"
                                    android:id="@+id/old_score2" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dp"
                                    android:textSize="@dimen/text_size_medium"
                                    android:text="sum/avg"
                                    android:id="@+id/old_score7" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/frame">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dp"
                                    android:textSize="@dimen/text_size_medium"
                                    android:text="日付 試合"
                                    android:id="@+id/old_score3" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dp"
                                    android:textSize="@dimen/text_size_medium"
                                    android:text="sum/avg"
                                    android:id="@+id/old_score8" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/frame">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dp"
                                    android:textSize="@dimen/text_size_medium"
                                    android:text="日付 試合"
                                    android:id="@+id/old_score4" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dp"
                                    android:textSize="@dimen/text_size_medium"
                                    android:text="sum/avg"
                                    android:id="@+id/old_score9" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/frame">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dp"
                                    android:textSize="@dimen/text_size_medium"
                                    android:text="日付 試合"
                                    android:id="@+id/old_score5" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dp"
                                    android:textSize="@dimen/text_size_medium"
                                    android:text="sum/avg"
                                    android:id="@+id/old_score10" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Graph"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           android:textSize="@dimen/text_size_medium"
                            android:text="グラフ"
                            android:textStyle="bold"
                            android:id="@+id/textView11" />

                        <com.echo.holographlibrary.LineGraph
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:id="@+id/graph"/>

                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       android:textSize="@dimen/text_size_medium"
                        android:text=" 過去の得点表一覧へ "
                        android:layout_gravity="right"
                        android:id="@+id/button4"
                        android:textColor="#ffffff"
                        android:background="@drawable/shadow"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ver."
                android:id="@+id/ver"
                android:textSize="@dimen/text_size_small"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
